<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="@dimen/medium_2_square"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:padding="5dp"
    android:layout_margin="1dp"
    android:elevation="1dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/aliment_icon"
            android:layout_width="@dimen/medium_square"
            android:layout_height="@dimen/medium_square"
            android:background="@drawable/brodure_simple_bleue"
            android:layout_centerInParent="true"
            />

        <RadioButton
            android:id="@+id/radio_deja_ajoute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true" />

    </RelativeLayout>

    <TextView
        android:id="@+id/aliment_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/text_size_14"
        android:text="Tomate"
        android:textAlignment="center"
        android:textSize="@dimen/text_size_14"
        android:layout_marginTop="@dimen/text_size_14" />

</LinearLayout>